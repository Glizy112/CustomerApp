@model WebApplicationMVCExample.Models.Customer
<div class="row">
    <div class="col-md-6">
        <div>
            <div class="form-group d-flex flex-row align-items-center col-md-9 mt-3">
                <label asp-for="Name" class="col-md-4"></label>
                <input asp-for="Name" class="form-control col-md-4" />
            </div>
            <div class="form-group d-flex flex-row col-md-9">
                <label class="col-md-4 text-white">Error</label>
                <span asp-validation-for="Name" class="text-danger col-md-6"></span>
            </div>
        </div>

        <div>
            <div class="form-group d-flex flex-row align-items-center col-md-9 mt-3">
                <label asp-for="Address1" class="col-md-4"></label>
                <input asp-for="Address1" class="form-control col-md-4" />
            </div>
            <div class="form-group d-flex flex-row col-md-9">
                <label class="col-md-4 text-white">Error</label>
                <span asp-validation-for="Address1" class="text-danger"></span>
            </div>
        <div>
            <div class="form-group d-flex flex-row align-items-center col-md-9 mt-3">
                <label asp-for="Address2" class="col-md-4"></label>
                <input asp-for="Address2" class="form-control col-md-4" />
            </div>
             <div class="form-group d-flex flex-row col-md-9">
                <label class="col-md-4 text-white">Error</label>
                <span asp-validation-for="Address2" class="text-danger"></span>
             </div>
         </div>
        <div>
            <div class="form-group d-flex flex-row align-items-center col-md-9 mt-3">
                <label asp-for="City" class="col-md-4"></label>
                <input asp-for="City" class="form-control col-md-4" />
            </div>
            <div class="form-group d-flex flex-row col-md-9">
                <label class="col-md-4 text-white">Error</label>
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
        </div>
        <div>
            <div class="form-group d-flex flex-row align-items-center col-md-9 mt-3">
                <label asp-for="ProvinceOrState" class="col-md-4"></label>
                <input asp-for="ProvinceOrState" class="form-control col-md-4" />
            </div>
            <div class="form-group d-flex flex-row col-md-9">
                <label class="col-md-4 text-white">Error</label>
                <span asp-validation-for="ProvinceOrState" class="text-danger"></span>
            </div>
        </div>
        <div>
            <div class="form-group d-flex flex-row align-items-center col-md-9 mt-3">
                <label asp-for="ZipOrPostalCode" class="col-md-4"></label>
                <input asp-for="ZipOrPostalCode" class="form-control col-md-4" />
            </div>
            <div class="form-group d-flex flex-row col-md-9">
                <label class="col-md-4 text-white">Error</label>
                <span asp-validation-for="ZipOrPostalCode" class="text-danger"></span>
            </div>
        </div>
        <div>
            <div class="form-group d-flex flex-row align-items-center col-md-9 mt-3">
                <label asp-for="Phone" class="col-md-4"></label>
                <input asp-for="Phone" class="form-control col-md-4" />
            </div>
            <div class="form-group d-flex flex-row col-md-9">
                <label class="col-md-4 text-white">Error</label>
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
        </div>
        <div>
            <div class="form-group d-flex flex-row align-items-center col-md-9 mt-3">
                <label asp-for="ContactFirstName" class="col-md-4"></label>
                <input asp-for="ContactFirstName" class="form-control col-md-4" />
            </div>
            <div class="form-group d-flex flex-row col-md-9">
                <label class="col-md-4 text-white">Error</label>
                <span asp-validation-for="ContactFirstName" class="text-danger"></span>
            </div>
        </div>
        <div>
            <div class="form-group d-flex flex-row align-items-center col-md-9 mt-3">
                <label asp-for="ContactLastName" class="col-md-4"></label>
                <input asp-for="ContactLastName" class="form-control col-md-4" />
            </div>
            <div class="form-group d-flex flex-row col-md-9">
                <label class="col-md-4 text-white">Error</label>
                <span asp-validation-for="ContactLastName" class="text-danger"></span>
            </div>
        </div>
        <div>
            <div class="form-group d-flex flex-row align-items-center col-md-9 mt-3">
                <label asp-for="ContactEmail" class="col-md-3"></label>
                <p class="col-md-1"></p>
                <input asp-for="ContactEmail" class="form-control col-md-4" />
            </div>
            <div class="form-group d-flex flex-row col-md-9">
                <label class="col-md-4 text-white">Error</label>
                <span asp-validation-for="ContactEmail" class="text-danger"></span>
            </div>
        </div>
        <div class="d-flex flex-row mt-5 col-md-6">
           
                @if(ViewData["Title"] == "Add a customer") {
                <input type="submit" value="Add" class="btn btn-primary col-md-8" />
                }else {
                <input type="submit" value="Save" class="btn btn-primary col-md-8" />
                }
                <a href="@Url.Action("Index")" class="btn btn-secondary col-md-8 mx-5">Cancel</a>
        </div>
        
    </div>
</div>
